<%- include('partials/header.ejs') %>

    <!-- <h1>Hello</h1> -->
<main>
    <div id="div-heading">
        <h1>(Work Tasks) The Hustle Continues</h1>
    </div>
    <div id="container">
        <%data.forEach(item => {%>
            <form action="/work/delete" method="post" class="input-container">
                <input onchange="this.form.submit()" type="checkbox" name="todoId" value=<%= item._id %> id="">
            <p><%= item.title %></p>
            </form>
        <%})%>
    
        <form action="/work" method="post">
            <input type="text" name="newTodo" autocomplete="off" autofocus placeholder="New Item">
            <button type="submit" class="add-icon">
                <svg width="64px" height="64px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#fff">

                    <g id="SVGRepo_bgCarrier" stroke-width="0"/>
                    
                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"/>
                    
                    <g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M11.25 12.75V18H12.75V12.75H18V11.25H12.75V6H11.25V11.25H6V12.75H11.25Z" fill="#ffffff"/> </g>
                    
                    </svg>
                </button>
        </form>
    </div>
    
</main>

<%- include('partials/footer.ejs') %>